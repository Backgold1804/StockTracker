<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@drawable/layout_gray"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal">

    <ImageView android:id="@+id/account_image"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/account_circle_black" />

    <TextView android:id="@+id/account_nickname"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textSize="30sp"
        android:gravity="center_vertical"
        android:layout_weight="4" />

    <ImageButton android:id="@+id/remove_friend_button"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:layout_marginEnd="10dp"
        android:src="@drawable/delete_account_black"/>

</LinearLayout>